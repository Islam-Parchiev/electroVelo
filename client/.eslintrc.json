{
    "extends": [
        "react-app",
        "react-app/jest",
        "plugin:storybook/recommended",
        "plugin:storybook/recommended"
    ],
    "rules": {
        "no-unused-vars": "warn",
        "no-console": "warn",
        "quotes": [
            "error",
            "single"
        ],
        "jsx-quotes": [
            "error",
            "prefer-double"
        ],
        "prefer-const": "error",
        "indent": [
            "warn",
            "tab"
        ],
        "max-len": [
            "error",
            {
                "code": 180
            }
        ],
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "semi": [
            "off"
        ],
        "import/order": [
            "error",
            {
                "groups": [
                    "builtin",
                    "external",
                    "internal",
                    "parent",
                    "sibling",
                    "index",
                    "object",
                    "type"
                ],
                "newlines-between": "always-and-inside-groups"
            }
        ]
    },
    "settings": {
    "boundaries/elements": [
      {
        "type": "shared",
        "pattern": "src/shared/*"
      },
      {
        "type": "entities",
        "pattern": "src/entities/*"
      },
      {
        "type": "features",
        "pattern": "src/features/*"
      },
      {
        "type": "widgets",
        "pattern": "src/widgets/*"
      },
      {
        "type": "pages",
        "pattern": "src/pages/*"
      }
    ],
    "import/resolver": {
      "node": {
        "paths": ["src"],
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      },
      "typescript": {
        "alwaysTryTypes": true
      }
    }
  }
}
